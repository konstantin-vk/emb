volatile uint32_t *pGPIOAOdr = (uint32_t *)(0x40020000UL + 0x14UL);
// GPIOA_BSRR = 0x40020000UL + 0x18UL; SET Pin0=0,1=1,2=2; RESET Pin0=bit16,1=17,2=18;
volatile uint32_t *pGPIOABSRR = (uint32_t *)(0x40020000UL + 0x18UL);



int main(void)
{
	init();


    /* Loop forever */
	for(;;)
	{
		simulate_once(HIGH);
